t=input()
for i in range(0,t):
    s=raw_input()
    s=s.split()
    n=int(s[0])
    m=int(s[1])
    if m>=n :
        a=((m-n)%1000000007*n%1000000007*(n+1)%1000000007)%1000000007
        if n%3==0:
            c=n/3
            b=((c%1000000007)*(n+1)%1000000007*(2*n+1)%1000000007)%1000000007
        elif (n+1)%3==0:
            c=(n+1)/3
            b=((n%1000000007)*c%1000000007*(2*n+1)%1000000007)%1000000007
        elif (2*n+1)%3==0:
            c=(2*n+1)/3
            b=((n%1000000007)*(n+1)%1000000007*c%1000000007)%1000000007
        a=(a%1000000007+b%1000000007)%1000000007
    else :
        m,n=n,m
        a=((m-n)%1000000007*n%1000000007*(n+1)%1000000007)%1000000007
        if n%3==0:
            c=n/3
            b=((c%1000000007)*(n+1)%1000000007*(2*n+1)%1000000007)%1000000007
        elif (n+1)%3==0:
            c=(n+1)/3
            b=((n%1000000007)*c%1000000007*(2*n+1)%1000000007)%1000000007
        elif (2*n+1)%3==0:
            c=(2*n+1)/3
            b=((n%1000000007)*(n+1)%1000000007*c%1000000007)%1000000007
        a=(a%1000000007+b%1000000007)%1000000007
    print a
